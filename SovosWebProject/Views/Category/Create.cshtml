@model Category
@{
    ViewData["Title"] = "Add Category";
}
<div class="container">
<form method="post">
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All">

        </div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" type="text" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row mb-3 text-end">
                <div class="col-6 col-md-3"><button type="submit" class="btn btn-primary py-2 w-100">Add</button></div>
                <div class="col-6 col-md-3"><a class="btn btn-secondary py-2 w-100" asp-controller="Category" asp-action="Index">Return to list</a></div
        </div>
    </div>
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
