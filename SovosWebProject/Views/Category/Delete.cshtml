@model Category
@{
    ViewData["Title"] = "Edit Category";
}

<form method="post">
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <input hidden asp-for="Id"/>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" type="text" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary py-2" style="width:15%">Delete</button>
            <button type="submit" class="btn btn-secondary py-2" style="width:15%" asp-controller="Category" asp-action="Index">Return to lst</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
